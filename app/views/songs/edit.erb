
<form action = "/songs/<%= @song.slug %>" method = "POST">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Name:</label><input type="text" name="song[name]"id = "Name" value="<%=@song.name%>">
<label>Artist Name:</label><input type= "text" name="song[artist]" id = "Artist Name" value="<%=@song.artist.name%>">
<label>Genres:</label>
<%Genre.all.each do |genre|%>
<input  id="<%=genre.name%>" type="checkbox"name="song[genres][]" value="<%= genre.name %>" <%='checked' if @song.genres.include?(genre)%>><%= genre.name %><br>
<%end%>
<input type = "submit" name = "Save">
</form>